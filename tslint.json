{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "ordered-imports": [
      false
    ],
    "object-literal-sort-keys": [
      false
    ],
    "member-access": [
      false
    ],
    "no-console": [
      false
    ],
    "only-arrow-functions": [
      false
    ],
    "jsx-no-lambda": [
      false
    ],
    "variable-name": [
      true,
      "allow-pascal-case",
      "allow-snake-case"
    ]
  }
}
